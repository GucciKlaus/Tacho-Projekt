<Window x:Class="Tacho_Projekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tacho_Projekt"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel LastChildFill="True">
        <Slider Name="sld_speedometer"  DockPanel.Dock="Bottom"
                Minimum="0" Maximum="180" SmallChange="1" ValueChanged="sld_speedometer_ValueChanged" Margin="5"></Slider>
        <GroupBox Header="Tacho">
            <Canvas Name="can_speedometer" Background="Black" SizeChanged="can_speedometer_SizeChanged"></Canvas>
        </GroupBox>
    </DockPanel>
    
</Window>
